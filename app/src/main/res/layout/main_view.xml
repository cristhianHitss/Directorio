<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#edede5">



        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton"
            android:text="@string/fa_users"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:onClick="some"
            android:background="@drawable/rounded_btn"
            android:clickable="true"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Colaboradores"
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_alignLeft="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton"
            android:layout_below="@+id/imageButton"
            android:layout_alignRight="@+id/imageButton"
            android:layout_alignEnd="@+id/imageButton" />
        <View android:id="@+id/primerdivisor"
            android:layout_height="2dp"
            android:layout_width="fill_parent"
            android:background="#014a7e"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_login_account"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cristhian Ivan CastaÃ±eda Rivera"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/imageView"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton3"
            android:text="@string/fa_male"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:onClick="some"
            android:background="@drawable/rounded_btn_2"
            android:clickable="true"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/primerdivisor"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Coordinadores"
            android:id="@+id/textView4"
            android:gravity="center"
            android:layout_alignLeft="@+id/imageButton3"
            android:layout_alignStart="@+id/imageButton3"
            android:layout_below="@+id/imageButton3"
            android:layout_alignRight="@+id/imageButton3"
            android:layout_alignEnd="@+id/imageButton3" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton4"
            android:text="@string/fa_building_o"
            android:textSize="50dp"
            android:onClick="some"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_btn_3"
            android:clickable="true"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="39dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton5"
            android:text="@string/fa_search"
            android:textSize="50dp"
            android:onClick="some"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_btn_4"
            android:clickable="true"
            android:layout_alignTop="@+id/imageButton4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Internos"
            android:id="@+id/textView5"
            android:gravity="center"
            android:layout_below="@+id/imageButton4"
            android:layout_alignLeft="@+id/imageButton4"
            android:layout_alignStart="@+id/imageButton4"
            android:layout_alignRight="@+id/imageButton4"
            android:layout_alignEnd="@+id/imageButton4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Buscar"
            android:id="@+id/textView7"
            android:gravity="center"
            android:layout_below="@+id/imageButton5"
            android:layout_alignLeft="@+id/imageButton5"
            android:layout_alignStart="@+id/imageButton5"
            android:layout_alignRight="@+id/imageButton5"
            android:layout_alignEnd="@+id/imageButton5" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_hitss"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:id="@+id/mn"
            android:text="@string/fa_bars"
            android:textSize="26dp"
            android:onClick="mn"
            android:textColor="#014a7e"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <ListView
        android:id="@+id/list_view"
        android:layout_width="272dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#013356"
        android:choiceMode="singleChoice"
        android:animateLayoutChanges="true"
        android:layout_marginTop="105dp" />
</android.support.v4.widget.DrawerLayout>

